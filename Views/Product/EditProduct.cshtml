
@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ProductManagmentSystem.Models.ProductModel;
<div class="col-lg-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3>Edit Product</h3>
            <form method="post" asp-controller="Product" asp-action="EditProduct" enctype="multipart/form-data">
                @Html.HiddenFor(x=>x.ProductId)
                @Html.HiddenFor(x=>x.ProductImg)
                <div class="form-group">
                    <label>Product Img</label>
                    <input type="image" class="form-control" asp-for="File" src="@Url.Content(Model.ProductImg)" style="height:120px; width:120px; border-radius:0px " alt="Sorry Server is down..." />
                    <input type="file" class="form-control" asp-for="File" placeholder="Upload File" />
                    <span asp-validation-for="ProductImg" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Product Name</label>
                    <input type="text" class="form-control" asp-for="ProductName" placeholder="Enter Name" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Number</label>
                    <input type="text" class="form-control" asp-for="ProductNumber" placeholder="Enter Number" />
                    <span asp-validation-for="ProductNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" asp-for="Description" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Product Price</label>
                    <input type="number" class="form-control" asp-for="ProductPrice" placeholder="Enter Amount" />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>
                <hr />
                <div class="row">
                    <input type="submit" class="btn btn-success" />
                    <a class="btn btn-danger" onclick="" asp-controller="Product" asp-action="AllProduct" style="margin-left: 30px">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>




